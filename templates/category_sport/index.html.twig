{% extends 'base.html.twig' %}

{% block title %}Hello CategorySportController!{% endblock %}

{% block body %}
<style>
  /* Styles for the team section */
  .sport-section {
    margin-bottom: 40px;
  }

  .sport-section h3 {
    font-size: 20px;
    margin-bottom: 10px;
  }

  .team-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    gap: 20px;
  }

  .team-box {
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    width: 300px;
  }

  .team-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
  }

  .team-box img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
    margin-bottom: 10px;
  }

  .team-title {
    font-size: 18px;
    margin-top: 0;
    margin-bottom: 5px;
  }

  .team-description {
    margin-top: 0;
    margin-bottom: 10px;
    font-size: 14px;
    color: #888;
  }
</style>

<section>
  <h2>Teams</h2>
  {% for sport in sports %}
    <div class="sport-section">
      <h3>{{ sport.name }}</h3>
      <div class="team-section">
        {% for team in teams %}
          {% if team.sport == sport %}
            <div class="team-box">
              <img src="{{ asset('uploads/' ~ team.photo) }}" alt="{{ team.name }}">
              <h2 class="team-title">{{ team.name }}</h2>
              <p class="team-description">Country: {{ team.country }}</p>
              <p class="team-description">Sport: {{ team.sport.name }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</section>

</section>


{% endblock %}

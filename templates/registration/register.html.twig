{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    /* Styles for the registration form */
    form {
        width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 4px;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-input {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }

    .checkbox-label {
        display: block;
        margin-bottom: 10px;
    }

    .btn {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background-color: #0056b3;
    }
</style>

   <h1>Register</h1>

{{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email, {'attr': {'class': 'form-input'}}) }}
    {{ form_row(registrationForm.plainPassword, {
        'label': 'Password',
        'attr': {'class': 'form-input'}
    }) }}
    {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'checkbox-label'}}) }}

    <button type="submit" class="btn">Register</button>
{{ form_end(registrationForm) }}

{% endblock %}
